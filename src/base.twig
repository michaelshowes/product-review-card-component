{% block html_head_container %}

{% include 'pages/partials/html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body>

    {# Skip Link for a11y #}
		{# <a class="skip-link screen-reader-text" href="#maincontent">{{ _e( 'Skip to content') }}</a> #}

    <div class="page-container">

      {# Header #}
      {% block header %}
        {% include 'components/site-header/site-header.twig' %}
      {% endblock %}

      <main id="maincontent" class="main-content">
        <div class="grid-container">
          {% if title %}<h1>{{title}}</h1>{% endif %}
          {% block body %}{% endblock %}
        </div>
      </main>

      {# Footer #}
      {% block footer %}
        {% include 'components/site-footer/site-footer.twig' %}
        {{ function('wp_footer') }}
      {% endblock %}

    </div>

    {# JQuery #}
    <script src="{{ site.theme.link }}/dist/js/jquery.min.js"></script>

    {# Custom JS #}
    <script src="{{ site.theme.link }}/dist/js/bundle.js"></script>

	</body>
</html>
